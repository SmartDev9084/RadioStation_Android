<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="70dp"
	android:padding="0dp" >

	<ImageView
		android:id="@+id/ID_IMGVIEW_ITEM_BACK"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="fitXY"
		android:src="@drawable/img_itm_back"
		android:contentDescription="@string/str_description" />

	<ImageView
		android:id="@+id/ID_IMGVIEW_ITEM_PODCAST"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="20dp"
		android:contentDescription="@string/str_description" />

	<ImageView
	    android:id="@+id/ID_IMGVIEW_ITEM_PODCAST_SHOWLIST"
	    android:layout_width="35dp"
	    android:layout_height="35dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="20dp"
	    android:contentDescription="@string/str_description"
	    android:scaleType="fitXY" />

	<TextView
		android:id="@+id/ID_TXTVIEW_ITEM_PODCAST"
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="5dp"
		android:layout_toLeftOf="@id/ID_IMGVIEW_ITEM_PODCAST_SHOWLIST"
		android:layout_toRightOf="@id/ID_IMGVIEW_ITEM_PODCAST"
		android:textSize="8pt"
		android:typeface="monospace" />

	<TextView
		android:id="@+id/ID_TXTVIEW_ITEM_PODCAST_COUNT"
		android:layout_width="match_parent"
		android:layout_height="20dp"
		android:layout_below="@+id/ID_TXTVIEW_ITEM_PODCAST"
		android:layout_marginBottom="5dp"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="5dp"
		android:layout_toLeftOf="@id/ID_IMGVIEW_ITEM_PODCAST_SHOWLIST"
		android:layout_toRightOf="@id/ID_IMGVIEW_ITEM_PODCAST"
		android:textSize="7pt"
		android:typeface="monospace" />

</RelativeLayout>
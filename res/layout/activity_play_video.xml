<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ID_FRMLYT_PLAY_VIDEO"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="androidcustom.radiostation.ui.ActivityPlayAudio"
	tools:ignore="MergeRootFrame" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:padding="0dp" >

		<ImageView
			android:id="@+id/ID_IMGVIEW_TITLEBAR_BACK"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"
			android:src="@drawable/img_titlebar_back" />
	
		<Button
			android:id="@+id/ID_BTN_TITLEBAR_PLAY_LEFT"
			android:layout_width="40dp"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:background="@drawable/selector_btn_list"
			android:contentDescription="@string/str_description" />
	
		<TextView
			android:id="@+id/ID_TXTVIEW_TITLEBAR_PLAY_TITLE"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="60dp"
			android:layout_marginRight="60dp"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="12pt" />
	
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="40dp"
		android:padding="0dp" >

		<LinearLayout
			android:id="@+id/ID_RELLYT_PLAY_VIDEO"
			android:layout_width="fill_parent"
			android:layout_height="185dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="0dp"
			android:layout_marginLeft="0dp"
			android:orientation="vertical" >

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/img_temp_horz_gray" />

			<TextView
				android:id="@+id/ID_TXTVIEW_PLAY_VIDEO_TITLE"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp"
				android:text="TextView" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:scaleType="fitXY"
				android:src="@drawable/img_temp_horz_gray" />

			<TextView
				android:id="@+id/ID_TXTVIEW_PLAY_VIDEO_ARTIST"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="10dp"
				android:text="TextView" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:scaleType="fitXY"
				android:src="@drawable/img_temp_horz_gray" />

			<TextView
				android:id="@+id/ID_TXTVIEW_PLAY_VIDEO_VIEWS"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginLeft="15dp"
				android:layout_marginTop="10dp"
				android:text="TextView" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:scaleType="fitXY"
				android:src="@drawable/img_temp_horz_gray" />

			<Button
				android:id="@+id/ID_BTN_PLAY_VIDEO_SHARE"
				style="?android:attr/buttonStyleSmall"
				android:layout_width="100dp"
				android:layout_height="30dp"
				android:layout_gravity="center"
				android:layout_marginTop="10dp"
				android:lines="1"
				android:maxLines="1"
				android:text="Share"
				android:textSize="10sp" />

		</LinearLayout>

		<WebView
		    android:id="@+id/ID_WEBVIEW_PLAY_VIDEO"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_above="@id/ID_RELLYT_PLAY_VIDEO"
		    android:layout_marginLeft="-10dp"
		    android:layout_marginRight="-10dp"
		    android:layout_marginTop="-10dp"
		    android:scrollbars="" />

	</RelativeLayout>

</FrameLayout>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="androidcustom.radiostation.ui.ActivityMain">

	<RelativeLayout
		android:id="@+id/ID_RELLYT_TITLEBAR"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:padding="0dp" >

		<ImageView
			android:id="@+id/ID_IMGVIEW_TITLEBAR_BACK"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"
			android:src="@drawable/img_titlebar_back" />
	
		<Button
			android:id="@+id/ID_BTN_TITLEBAR_MAIN_LEFT"
			android:layout_width="40dp"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:background="@drawable/selector_btn_list"
			android:contentDescription="@string/str_description" />
	
		<Button
			android:id="@+id/ID_BTN_TITLEBAR_MAIN_RIGHT"
			android:layout_width="40dp"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:background="@drawable/selector_btn_refresh"
			android:contentDescription="@string/str_description" />
	
		<SearchView
			android:id="@+id/ID_SEARCHVIEW_TITLEBAR_MAIN"
			style="@color/COLOR_WHITE"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="60dp"
			android:layout_marginRight="60dp"
			android:contentDescription="@string/str_description" />
	
	</RelativeLayout>

	<FrameLayout
		android:id="@+id/ID_FRMLYT_MAIN"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="40dp"
		tools:context="androidcustom.radiostation.ui.ActivityMain" >
	
		<ListView
			android:id="@+id/ID_LSTVIEW_MAIN"
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

		</ListView>

	</FrameLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="fitXY"
		android:src="@drawable/img_bkg_dialog_login" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:text="SHARE"
			android:textColor="@color/COLOR_BLUE" />

		<ImageView
			android:id="@+id/ID_IMGVIEW_SHARE_FACEBOOK"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:contentDescription="@string/str_description"
			android:scaleType="fitXY"
			android:src="@drawable/img_temp_horz_gray" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/ID_IMGVIEW_SHARE_FACEBOOK"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:contentDescription="@string/str_description"
				android:scaleType="fitXY"
				android:src="@drawable/img_btn_share_facebook" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="20dp"
				android:gravity="center"
				android:text="Facebook" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/ID_IMGVIEW_SHARE_TWITTER"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:contentDescription="@string/str_description"
				android:scaleType="fitXY"
				android:src="@drawable/img_btn_share_twitter" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="20dp"
				android:text="Twitter" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/ID_IMGVIEW_SHARE_GOOGLE"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:contentDescription="@string/str_description"
				android:scaleType="fitXY"
				android:src="@drawable/img_btn_share_google" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="20dp"
				android:text="Google" />

		</LinearLayout>

	</LinearLayout>

</FrameLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ID_FRMLYT_RADIO"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:context="androidcustom.radiostation.ui.ActivityRadio"
	tools:ignore="MergeRootFrame" >

   	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:padding="0dp" >
	
		<ImageView
			android:id="@+id/ID_IMGVIEW_TITLEBAR_BACK"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"
			android:src="@drawable/img_titlebar_back" />

   		<Button
			android:id="@+id/ID_BTN_TITLEBAR_PLAY_LEFT"
			android:layout_width="40dp"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:background="@drawable/selector_btn_list"
			android:contentDescription="@string/str_description" />
	
		<TextView
			android:id="@+id/ID_TXTVIEW_TITLEBAR_PLAY_TITLE"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="60dp"
			android:layout_marginRight="60dp"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="12pt" />
	
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/ID_RELLYT_RADIO"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="40dp" >

		<RelativeLayout
			android:id="@+id/ID_RELLYT_RADIO_BTNGROUP"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="15dp" >

			<ImageView
				android:id="@+id/ID_IMGVIEW_RADIO_BTN_TEMPCENTER"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:contentDescription="@string/str_description"
				android:src="@drawable/img_temp_vert_white" />

			<ImageView
			    android:id="@+id/ID_IMGVIEW_RADIO_BTN_SOUND"
			    android:layout_width="60dp"
			    android:layout_height="40dp"
			    android:layout_alignParentTop="true"
			    android:layout_marginRight="5dp"
			    android:layout_toLeftOf="@+id/ID_IMGVIEW_RADIO_BTN_TEMPCENTER"
			    android:contentDescription="@string/str_description"
			    android:scaleType="fitXY"
			    android:src="@drawable/img_btn_sound_on" />

			<ImageView
			    android:id="@+id/ID_IMGVIEW_RADIO_BTN_STATUS"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentTop="true"
			    android:layout_marginRight="30dp"
			    android:layout_toLeftOf="@+id/ID_IMGVIEW_RADIO_BTN_SOUND"
			    android:adjustViewBounds="false"
			    android:contentDescription="@string/str_description"
			    android:scaleType="fitXY"
			    android:src="@drawable/img_btn_radio_stop" />

			<Button
			    android:id="@+id/ID_BTN_RADIO_FACEBOOK"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentTop="true"
			    android:layout_marginLeft="20dp"
			    android:layout_toRightOf="@+id/ID_IMGVIEW_RADIO_BTN_TEMPCENTER"
			    android:background="@drawable/selector_share_facebook"
			    android:contentDescription="@string/str_description" />

			<Button
			    android:id="@+id/ID_BTN_RADIO_TWITTER"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:layout_alignParentTop="true"
			    android:layout_marginLeft="30dp"
			    android:layout_toRightOf="@+id/ID_BTN_RADIO_FACEBOOK"
			    android:background="@drawable/selector_share_twitter"
			    android:contentDescription="@string/str_description" />

		</RelativeLayout>

		<TextView
			android:id="@+id/ID_TXTVIEW_RADIO_TITLE"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:layout_above="@+id/ID_RELLYT_RADIO_BTNGROUP"
			android:layout_marginBottom="10dp"
			android:gravity="center"
			android:lines="1"
			android:maxLines="1"
			android:textColor="@color/black"
			android:textSize="11pt"
			android:typeface="monospace" />

		<ImageView
			android:id="@+id/ID_IMGVIEW_RADIO_BACKGROUND"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:layout_above="@+id/ID_TXTVIEW_RADIO_TITLE"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="10dp"
			android:contentDescription="@string/str_description"
			android:scaleType="fitXY"
			android:src="@drawable/img_bkg_login" />

	</RelativeLayout>

</FrameLayout>
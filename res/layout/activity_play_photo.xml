<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ID_FRMLYT_PLAY_PHOTO"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="androidcustom.radiostation.ui.ActivityPlayPhoto"
	tools:ignore="MergeRootFrame" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:padding="0dp" >
	

		<ImageView
			android:id="@+id/ID_IMGVIEW_TITLEBAR_BACK"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"
			android:src="@drawable/img_titlebar_back" />

		<Button
			android:id="@+id/ID_BTN_TITLEBAR_PLAY_LEFT"
			android:layout_width="40dp"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:background="@drawable/selector_btn_list"
			android:contentDescription="@string/str_description" />
	
		<TextView
			android:id="@+id/ID_TXTVIEW_TITLEBAR_PLAY_TITLE"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="60dp"
			android:layout_marginRight="60dp"
			android:gravity="center"
			android:textSize="12pt" />
	
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/ID_RELLYT_PLAY_PHOTO"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="40dp" >

		<RelativeLayout
			android:id="@+id/ID_RELLYT_PLAY_PHOTO_BTNGROUP"
			android:layout_width="fill_parent"
			android:layout_height="25dp"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="10dp" >

			<Button
				android:id="@+id/ID_BTN_PLAY_PHOTO_BTN_PREV"
				android:layout_width="wrap_content"
				android:layout_height="25dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="50dp"
				android:scaleType="fitXY"
				android:contentDescription="@string/str_description"
				android:background="@drawable/selector_play_prev" />

			<Button
				android:id="@+id/ID_BTN_PLAY_PHOTO_BTN_NEXT"
				android:layout_width="wrap_content"
				android:layout_height="25dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_marginRight="50dp"
				android:scaleType="fitXY"
				android:contentDescription="@string/str_description"
				android:background="@drawable/selector_play_next" />


		</RelativeLayout>

		<FrameLayout
			android:id="@+id/ID_FRMLYT_PLAY_PHOTO_MAIN"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true"
			android:layout_above="@+id/ID_RELLYT_PLAY_PHOTO_BTNGROUP"
			android:layout_marginBottom="5dp"
			android:padding="0dp" >
		
			<ImageView
				android:id="@+id/ID_IMGVIEW_PLAY_PHOTO_1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@string/str_description"
				android:scaleType="fitXY"
				android:src="@drawable/img_bkg_login" />

			<ImageView
				android:id="@+id/ID_IMGVIEW_PLAY_PHOTO_2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@string/str_description"
				android:scaleType="fitXY"
				android:src="@drawable/img_bkg_login" />

			<ImageView
				android:id="@+id/ID_IMGVIEW_PLAY_PHOTO_3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@string/str_description"
				android:scaleType="fitXY"
				android:src="@drawable/img_bkg_login" />

		</FrameLayout>

	</RelativeLayout>

</FrameLayout>